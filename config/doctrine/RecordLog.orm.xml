<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      https://raw.githubusercontent.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="PhpSentinel\BugCatcher\Entity\RecordLog"
            table="record_log"
            repository-class="PhpSentinel\BugCatcher\Repository\RecordLogRepository"
    >
        <indexes>
            <!-- This is a index for message column with index length 255 -->
            <index name="message_idx" columns="message"/>
        </indexes>

        <field name="level" type="integer">
            <options>
                <option name="not_blank">true</option>
            </options>
        </field>

        <field name="message" type="string" length="750">
            <options>
                <option name="not_blank">true</option>
            </options>
        </field>

        <field name="requestUri" type="string" length="1500">
            <options>
                <option name="length_max">1500</option>
            </options>
        </field>
    </entity>
</doctrine-mapping>
